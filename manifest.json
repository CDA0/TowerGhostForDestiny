{
  "manifest_version": 2,
  "name": "Destiny Item Manager",
  "version": "2.8.2",
  "description": "Robust interface to manage gear, weapons, and items in destiny.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "short_name": "DIM",
  "background": {
    "scripts": [
      "scripts/bungie.js",
	  "js/app.js"
    ]
  },
  "permissions": [
    "storage",
    "*://*.bungie.net/*",
    "cookies",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icon128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "incognito": "split",
  "offline_enabled": false,
  "options_page": "window.html"
}
